#include <fcntl.h>
#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>

#define BUF_SIZE 1024

int main(int argc, char *argv[]) {
    int input_fd, output_fd, n;
    char buf[BUF_SIZE];

    if (argc != 3) {
        printf("Usage: %s <source> <destination>\n", argv[0]);
        exit(1);
    }

    input_fd = open(argv[1], O_RDONLY);
    if (input_fd == -1) {
        perror("open");
        exit(1);
    }

    output_fd = open(argv[2], O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (output_fd == -1) {
        perror("open");
        exit(1);
    }

    while ((n = read(input_fd, buf, BUF_SIZE)) > 0) {
        if (write(output_fd, buf, n) != n) {
            perror("write");
            exit(1);
        }
    }

    if (n == -1) {
        perror("read");
        exit(1);
    }

    if (close(input_fd) == -1) {
        perror("close");
        exit(1);
    }
    if (close(output_fd) == -1) {
        perror("close");
        exit(1);
    }

    return 0;
}
